<h1>Books</h1>
<table>
  <thead class="book-head">
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="book-body">
    <% @books.each do |book| %>
    <tr>
      <td class="book-title"><%= book.title %></td>
      <td class="book-title"><%= book.body %></td>
      <td class="book-link"><%= link_to 'Show', book_path(book.id) %></td>
      <td class="book-link"><%= link_to 'Edit', edit_book_path(book.id) %></td>
      <td class="book-link"><%= link_to 'Destroy', destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h3>New book</h3>
<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="book-field">
  <div>Title</div>
  <%= f.text_field :title %>
</div>
<div class="book-field">
  <div>Body</div>
  <%= f.text_area :body %>
</div>
<div class="book-field">
  <%= f.submit 'Create Book' %>
</div>
<% end %>